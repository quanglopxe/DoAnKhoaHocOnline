
@{
    ViewBag.Title = "MyCourses";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using DoAnLTWEB.Models;
@model List<CourseCart>
<style>
    a {
        text-decoration: none;
    }
</style>
@{
    var User = Session["User"] as NguoiDung;
}
<body>
    <div style="width:100%; height: auto">
        <h2 style="text-align:center">KHÓA HỌC CẦN THANH TOÁN</h2>
        @if (Model.Count != 0)
        {
            <div class="card border-dark">
                <table style="text-align: center">
                    <thead><a href="/MyCourses/XoaMyCoursesAll" style="text-align:center" class="btn btn-danger">XÓA TẤT CẢ</a></thead>
                    <tr style="background-color: lightyellow; margin:auto">
                        <th>MÃ KHÓA HỌC</th>
                        <th>TÊN KHÓA HỌC</th>
                        <th>GIẢNG VIÊN</th>
                        <th>ẢNH BÌA</th>
                        <th>GIÁ</th>
                        <th>TÙY CHỌN</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="12%">@item.MaKH</td>
                            <td width="20%">@item.TenKH</td>
                            <td width="12%">@item.GiangVien</td>                            
                            <td width="16%"><img src="@Url.Content(item.Picture)" width="80%" /></td>
                            @*@using (Html.BeginForm("CapNhatMyCourses", "MyCourses", new { MaKH = item.MaKH }))
                            {*@
                                <td width="22%">@String.Format("{0:0,0}", item.GiaKhoaHoc)</td>                                
                                <td><a href="/Lesson/Lesson?MaKH=@item.MaKH" class="btn btn-primary">CHI TIẾT</a></td>
                                <td><a href="/MyCourses/XoaMyCourses?MaKH=@item.MaKH" class="btn btn-danger">XÓA</a></td>

                            @*}*@
                        </tr>

                    }
                <tr style="background-color: lightyellow;">
                    <td></td>
                    <td style="color:red; font-weight: bold;">@ViewBag.TongSoLuong khóa học</td>
                    <td colspan="2" style="color:blue; font-weight:bold; text-align:right">Tổng cộng: </td>
                    <td style="color:red; font-weight: bold;">@String.Format("{0:0,0}", ViewBag.TongThanhTien) VNĐ</td>

                </tr>
                </table>
                <div class="input-group">
                    <a href="/Payment/ThanhToan" class="text-center btn btn-success">THANH TOÁN</a>
                    <a href="/Course/Course" class="text-center btn btn-primary" style="position:relative;left:10px">QUAY LẠI</a>
                </div>
            </div>
        }
        else
        {
            <center><h5>Bạn không có khóa học nào cần thanh toán.</h5></center>
        }
    </div>
</body>