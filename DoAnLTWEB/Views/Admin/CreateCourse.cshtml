@model DoAnLTWEB.Models.KhoaHoc
@{
    ViewBag.Title = "AddCourse";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới khóa học</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Tên khóa học</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Ảnh bìa khóa học</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Picture, new { type = "file", @class = "form-control" })
                <span id="pictureInfo"></span>
                @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Giá khóa học</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaKhoaHoc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaKhoaHoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Mô tả khóa học</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoTaKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MoTaKH, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label>Tên môn học</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMonHoc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenMonHoc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label>Giảng viên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiangVien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiangVien, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Thêm mới</button>
                <a href="@Url.Action("AdminCourse")" class="btn btn-primary">Quay lại</a>
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        $('#Picture').on('change', function () {
            var file = this.files[0];
            var fileName = file.name;
            var fileExtension = fileName.split('.').pop();
            var value = fileName + '.' + fileExtension;
            $('#pictureInfo').text('Tên file: ' + value);
            $('#Picture').val(value);
        });
    });
</script>