@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@model DoAnLTWEB.Models.NguoiDung

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Đăng nhập</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/styleLesson.css" rel="stylesheet">    
</head>
<body>
    <div class="container-fluid">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-lg-7 mb-5 mb-lg-0">
                    <div class="mb-4">
                        <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Need Any Courses</h5>                        
                    </div>                    
                </div>
                <div class="col-lg-5">
                    <div class="card border-0">
                        <div class="card-header bg-light text-center p-4">
                            <h1 class="m-0">Đăng nhập</h1>
                        </div>
                        <div class="card-body rounded p-5" style="background-color:lightblue">
                            <form action="/User/Login" method="post">
                                <div class="form-group">
                                    <input name="TenND" type="text" class="form-control border-0 p-4 mb-2" style="height:35px" placeholder="Tên người dùng" required="required" />
                                </div>
                                <div class="form-group">
                                    <input name="MatKhau" type="password" class="form-control border-0 p-4 mb-2" style="height:35px" placeholder="Mật khẩu" required="required" />
                                </div>
                                <div>
                                    <center><button class="btn btn-dark btn-block border-0 py-3" style="width:100%" type="submit">Đăng nhập</button></center>
                                </div>
                                <div class="pt-2">
                                    <div style="color:black; width: fit-content; margin-right: auto; margin-left: auto;">
                                        Chưa có tài khoản?  <a href="/User/Register" style="color: orangered;"> &nbsp; Đăng ký ngay</a>
                                    </div>
                                </div>
                                </br>
                                @if (Session["User"] == null)
                                {
                                    <center><h5 style="color:red">@ViewBag.Message</h5></center>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
